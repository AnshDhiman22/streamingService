<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/view details.css">
    <link rel="icon" href="/images/web logo.png">
    <title>Movies Geeks</title>
 <% for(background of background) { %>
    <style>
      .details-frame{
    position: relative;
    width: 100%;
    height: 750px;
    background-image: url('<%= background.landscape %>');
    background-repeat: no-repeat;
    background-size: cover;
    background-position:top;
}
    </style>
    <% } %>
  </head>
  <body>
    <div class="container2">
      <div class="nav">
        <div class="logo">
            <a href="">
                <img src="/images/logo web 1.png" alt="">
            </a>
        </div>
        <div class="search">
            <div class="input-search">
                <form action="/search/tv">
                <input class="search" type="text" name="q" autocomplete="off" placeholder="Search">
                <button><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>
        </div>
        <div class="pages">
            <ul>
                <li><a class="nav-a" href="/home">Home</a></li>
                <li><a class="nav-a" href="/about">About</a></li>
                <li><a class="nav-a" href="/tv">Tv Series</a></li>
                <li><a class="nav-a" href="/watch-later">Watch later</a></li>
            </ul>
        </div>
    </div>
      
      <div class="container">
        <% if (details.length > 0) { %>
          <% details.forEach(function(series) { %>


        <div class="details-frame"></div>
            <div class="movie-content">
              <div class="movie-img">
               <img src="<%= series.url %>" alt="">
              </div>
              <div class="movie-details">
                <div class="movie-title">
                  <h1><%= series.title %></h1>
                </div>
                <div class="ratings">
                  <div class="year"><p class="same-p"><%= series.year %></p></div>
                  <div class="age-certifiaction"><div class="age-box"><p class="same-p"><%= series.rating %></p></div></div>
                  <div class="duration"><p class="same-p"><%= series.duration %></p></div>
                  <div class="genra"><p class="same-p"><%= series.genra %></p></div>
                </div>
                <div class="about-movie">
                  <p>
                    <%= series.discription %>
                  </p>
                </div>
                <div class="navigations">
                       <a href="/streaming/tv/<%= series.title %>"><button class="play btn-n"><i class="fa-solid fa-play"></i> PLAY</button></a>
                       <a href=""><button class="watch-list btn-n"><i class="fa-solid fa-plus"></i> WATCH LATER</button></a>
                </div>
              </div>
           </div>
        </div>
         
        
        <% }); %>
        <% } %>
       
        <div class="recomanded">
          <div class="rec-title">
            <h4>Get in On the Action</h4>
          </div>
          <div class="rec-content">
            <ul>
                <% for(list of list) { %>
              <a href="/tv/view/<%=list.title%>">
              <li>
                <img src="<%= list.landscape %>" alt="">
              </li>
              </a>
              <% } %>
            </ul>
          </div>
        </div>

      </div>


    </div>
  </body>
</html>
